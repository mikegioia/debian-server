#!/bin/bash

# create the configuration files for a new install
#

# create blank authorized keys if none exists
#
echo "Creating new configuration files"
if ! [ -f conf/authorized_keys ] ; then
    cp src/authorized_keys conf/authorized_keys
    #cat ~/.ssh/id_rsa.pub > conf/authorized_keys
else
    echo "  --> skipping authorized_keys, file already exists"
fi

# create blank hosts if none exists
#
if ! [ -f conf/hosts ] ; then
    cp src/hosts conf/hosts
else
    echo "  --> skipping hosts, file already exists"
fi

# create default config file if none exists
#
if ! [ -f conf/config ] ; then
    cp src/config conf/config
else
    echo "  --> skipping config, file already exists"
fi

# create bash aliases and profile
#
if ! [ -f conf/bash_profile ] ; then
    cp src/bash_profile conf/bash_profile
else
    echo "  --> skipping bash_profile, file already exists"
fi
if ! [ -f conf/bash_aliases ] ; then
    cp src/bash_aliases conf/bash_aliases
else
    echo "  --> skipping bash_aliases, file already exists"
fi

echo ""
echo "Default config files generated. Please edit the files in ./conf!"
